{
  "manifest_version": 2,
  "name": "Credentials Vault Extension",
  "version": "1.0",
  "description": "Manage your credentials directly from the browser.",
  "permissions": [
    "storage",
    "activeTab",
    "http://localhost:5000/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}